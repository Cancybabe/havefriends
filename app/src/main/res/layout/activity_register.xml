<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/act_register_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/act_register_iv_back"
            android:src="@drawable/act_back"
            android:layout_width="30dp"
            android:layout_height="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/act_register_et_nickname"
            android:hint="昵称"
            android:padding="10dp"
            android:textColorHint="@color/act_text"
            android:background="@null"
            android:textColor="@color/act_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/act_text"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/act_register_et_phonenumber"
                android:hint="手机号"
                android:padding="10dp"
                android:textColorHint="@color/act_text"
                android:textColor="@color/act_text"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/act_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/act_register_et_password"
                android:hint="设置密码"
                android:padding="10dp"
                android:textColorHint="@color/act_text"
                android:textColor="@color/act_text"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/act_text"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


            <CheckBox
                android:id="@+id/act_register_cb_man"
                android:onClick="onChoseOneSexClick"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:button="@null"
                android:background="@drawable/act_register_sex"
                />

            <TextView
                android:id="@+id/act_register_tv_man"
                android:layout_marginLeft="5dp"
                android:text="男"
                android:textSize="18sp"
                android:textColor="@color/act_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/act_register_cb_woman"
                    android:onClick="onChoseOneSexClick"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:button="@null"
                    android:background="@drawable/act_register_sex"
                    />

            <TextView
                android:id="@+id/act_register_tv_woman"
                android:layout_marginLeft="5dp"
                android:text="女"
                android:textSize="18sp"
                android:textColor="@color/act_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/act_register_et_code"
                android:hint="验证码"
                android:textColor="@color/act_text"
                android:padding="10dp"
                android:textColorHint="@color/act_text"
                android:background="@drawable/act_register_edit_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/act_register_btn_getcode"
                android:layout_width="80dp"
                android:text="获取验证码"
                android:onClick="onGetCodeOnClick"
                android:textColor="@color/act_text"
                android:background="@drawable/act_register_btn_selector"
                android:layout_height="match_parent" />



        </LinearLayout>


        <Button
            android:id="@+id/act_register_btn_sumbitregister"
            android:text="注  册"
            android:onClick="onRegisterUserClick"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:textColor="@color/act_text"
            android:background="@drawable/act_register_btn_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>



</LinearLayout>